<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF6FF">


    <ImageView
        android:id="@+id/iv_rectangle"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rectangle"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_rectangle"
        app:layout_constraintStart_toStartOf="@+id/iv_rectangle"
        app:layout_constraintTop_toTopOf="@+id/iv_rectangle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_rectangle"
        app:layout_constraintStart_toStartOf="@+id/iv_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/iv_user"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_rectangle"
        app:layout_constraintStart_toStartOf="@+id/iv_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_rectangle"
        app:layout_constraintStart_toStartOf="@+id/iv_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_verdict_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Based on Face Detection :"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rectangle" />

    <TextView
        android:id="@+id/tv_verdict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Positive"
        android:textColor="#FF0000"
        android:textColorHint="#FF0000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_verdict_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_verdict_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_verdict_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>